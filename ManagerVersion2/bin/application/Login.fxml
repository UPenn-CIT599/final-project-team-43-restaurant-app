            <Font name="Copperplate" size="24.0" />
         </font>
      </Label>
   </top>
   <left>
      <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../taco-387765.png" />
         </image>
      </ImageView>
   </left>
   <right>
      <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../taco-387765.png" />
         </image>
      </ImageView>
   </right>
   <bottom>
      <AnchorPane prefHeight="100.0" prefWidth="470.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnBackToCus" layoutX="62.0" layoutY="73.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="20.0" prefWidth="121.0" text="Back to Customer" textFill="#b8144f" translateX="-30.0">
               <font>
                  <Font name="Kefa Regular" size="13.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
