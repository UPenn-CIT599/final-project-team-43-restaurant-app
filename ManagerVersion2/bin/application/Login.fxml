<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane onDragDetected="#handleButtonAction" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <center>
      <HBox alignment="CENTER" prefHeight="300.0" prefWidth="350.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" translateX="-15.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="User name:" translateY="-15.0">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Password:" textAlignment="CENTER" translateX="4.0" translateY="3.0">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="txtUserEmail" onAction="#handleButtonAction" promptText="User Email" />
                  <PasswordField fx:id="txtPassword" onAction="#handleButtonAction" promptText="password" translateY="10.0" />
                  <Button fx:id="btn2" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleButtonAction" text="Login" translateY="30.0" underline="true" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <Label text="Manager Version Login" textFill="#066879" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>
   </top>
   <left>
      <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../taco-387765.png" />
         </image>
      </ImageView>
   </left>
   <right>
      <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../taco-387765.png" />
         </image>
      </ImageView>
   </right>
</BorderPane>
